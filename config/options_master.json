{
  "version": 1,
  "shared": {
    "scope_lock": true,
    "require_hil": true,
    "allowed_techniques": ["passive", "safe_active"],
    "autonomy_tier": 0,
    "rate_limits": {
      "global_min_interval_ms": 0,
      "per_tool": {}
    },
    "evidence": {
      "require_screen_recording_for_validated": true
    },
    "alerts": {
      "enabled": true,
      "thresholds": {
        "high": "instant",
        "medium": "batch",
        "low": "digest"
      }
    },
    "logging": {
      "redaction": true,
      "audit": true
    },
    "proxy": {
      "http": "",
      "https": "",
      "no_proxy": ""
    },
    "retention": {
      "enabled": false,
      "action": "archive"
    },
    "vault_backend": "local",
    "auto_install_tools": true,
    "allow_install": false,
    "llm_active_provider": "",
    "db": {
      "host": "localhost",
      "port": "5432",
      "name": "kaison",
      "user": "kaison",
      "password_source": "source.db_password",
      "sslmode": "disable"
    },
    "budget_default_tier": "standard",
    "stealth_default": "standard",
    "scan_duration_days": 42,
    "swap_window_days": 14,
    "pool_size_min": 50,
    "pool_size_max": 500,
    "budget_presets": {
      "economy": {"daily_budget_usd": 10, "stealth": "high", "max_parallel_cap": 2},
      "standard": {"daily_budget_usd": 25, "stealth": "standard", "max_parallel_cap": 4},
      "max": {"daily_budget_usd": 100, "stealth": "low", "max_parallel_cap": 8}
    },
    "stealth_profiles": {
      "high": {"min_interval_ms": 1500},
      "standard": {"min_interval_ms": 500},
      "low": {"min_interval_ms": 100}
    },
    "langstudio": {
      "wrap_tools": true
    },
    "program_sync": {
      "enabled": false,
      "auto_trigger": false,
      "interval_hours": 24,
      "sleep_seconds": 1.5
    }
  },
  "osint_overrides": {
    "autonomy_tier": 1,
    "allowed_techniques": ["passive", "safe_active"],
    "tool_categories_allowlist": [
      "dns",
      "subdomain",
      "web",
      "content",
      "tech",
      "tls",
      "cloud",
      "email",
      "social",
      "intel",
      "paste",
      "secrets",
      "dork",
      "search",
      "framework",
      "visual",
      "scan",
      "graphql",
      "ssrf",
      "smuggling",
      "takeover",
      "util",
      "meta"
    ],
    "alerts": {
      "enabled": true
    }
  },
  "vuln_overrides": {
    "autonomy_tier": 0,
    "allowed_techniques": ["safe_active"],
    "tool_categories_allowlist": [
      "web",
      "net",
      "container",
      "deps",
      "sast",
      "cloud",
      "mobile",
      "firmware"
    ],
    "require_hil": true
  },
  "validation_overrides": {
    "autonomy_tier": 0,
    "require_hil": true,
    "evidence": {
      "require_screen_recording_for_validated": true
    }
  }
}
